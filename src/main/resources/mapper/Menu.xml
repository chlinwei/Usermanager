<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lw.com.UserManager.mapper">

    <!--  根据角色查询权限
        1、数据在menu表中
        2、需要通过角色查询，角色和权限的关系在role_menu中维护
        3、需要多表查询，关系搞清楚
        4、sql：in (1,2,3)
      -->
    <select id="selectMenuByRoleId" resultType="lw.com.UserManager.domain.login.entity.Menu">
        select m.id,
        m.parent_id,
        m.menu_name,
        m.sort,
        m.perms,
        m.menu_type,
        m.icon,
        m.deleted,
        m.create_time,
        m.update_time
        from alert_menu m left join alert_role_menu rm on m.id = rm.menu_id
        where rm.role_id in
        <foreach collection="roleIds" open="(" close=")" separator="," item="roleId">
            #{roleId}
        </foreach>
    </select>
</mapper>